{
  "name": "@mathieu-bour/action-template",
  "version": "1.0.0",
  "description": "A template for GitHub Actions which include the compilation toolchain as well as the required CI/CD workflows and quality tools.",
  "main": "dist/index.js",
  "scripts": {
    "clean": "rimraf dist",
    "format": "prettier --write \"src/**/*.ts\"",
    "lint": "eslint \"src/**\"",
    "lint:fix": "eslint --fix \"src/**\"",
    "typecheck": "eslint \"src/**\"",
    "test": "jest",
    "prebuild": "npm run clean",
    "build": "node .esbuildrc.js"
  },
  "keywords": [
    "github-actions",
    "template",
    "typescript"
  ],
  "homepage": "https://github.com/mathieu-bour/action-template",
  "license": "MIT",
  "author": {
    "name": "Mathieu Bour",
    "email": "mathieu.tin.bour@gmail.com",
    "url": "https://github.com/mathieu-bour"
  },
  "repository": "github:mathieu-bour/action-template",
  "dependencies": {
    "@actions/core": "^1.2.6"
  },
  "devDependencies": {
    "@types/jest": "^26.0.20",
    "@types/node": "^12.19.15",
    "@typescript-eslint/eslint-plugin": "^4.14.0",
    "esbuild": "^0.8.34",
    "eslint": "^7.18.0",
    "eslint-config-prettier": "^7.2.0",
    "husky": "^4.3.8",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.3",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.4.4",
    "typescript": "^4.1.3"
  },
  "private": true
}
